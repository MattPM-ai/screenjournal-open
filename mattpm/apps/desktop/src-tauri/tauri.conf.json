{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MattPM Tracker",
  "version": "0.1.0",
  "identifier": "com.mattpm.tracker",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MattPM Tracker",
        "width": 300,
        "height": 550,
        "minWidth": 300,
        "minHeight": 550,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": {
      "resources/activitywatch": "activitywatch",
      "resources/ffmpeg": "ffmpeg"
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "./entitlements.plist",
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/MattPM-ai/mattpm/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJFQjkyMzAzRDQ4OUI1MkYKUldRdnRZblVBeU81dmo5RnRIOHFmcUFoUTExZTJIRDhoQytQekE4VjgveWIvZE9sMGViK3pVbkUK"
    }
  }
}
