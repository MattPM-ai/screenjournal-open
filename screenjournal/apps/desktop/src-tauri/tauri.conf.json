{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScreenJournal Tracker",
  "version": "0.1.0",
  "identifier": "com.screenjournal.tracker",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ScreenJournal Tracker",
        "width": 300,
        "height": 550,
        "minWidth": 300,
        "minHeight": 550,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": {
      "resources/activitywatch": "activitywatch",
      "resources/ffmpeg": "ffmpeg",
      "resources/binaries": "binaries",
      "resources/python": "python",
      "resources/databases": "databases",
      "resources/frontend": "frontend",
      "resources/start-bundled.sh": "start-bundled.sh",
      "resources/start-bundled.bat": "start-bundled.bat"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "./entitlements.plist",
      "signingIdentity": "-"
    }
  }
}
